<div class = "container">
  <div class = "row">
    <div class = "col-xs-12">
      <h2>良かったことリスト</h2>
      <% @good_things.each do |gt| %>
        <tr>
          <p><%= gt.title %></p>
          <p><%= gt.body %></p>
          <%= link_to "destroy", good_thing_path(gt.id), method: :delete %>
        </tr>
        <% end %>
    </div>
  </div>
</div>