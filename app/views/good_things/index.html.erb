<div class = "container">
  <div class = "row">
    <div class = "mx-auto">
      <h2>皆様の良かったこと</h2>
      <%= link_to "ポジティブの間", good_things_path, class: "btn btn-primary" %>
    </div>
    
    <div class = "mx-auto">
      <% @good_things.each do |gt| %>
        <div class = "card w-50 mx-auto mt-4 shadow-lg">
          <p><%= gt.user.name %></p>
          <p><%= gt.title %></p>
          <p><%= gt.body %></p>
        
        <% end %>
        </div>
    </div>
  </div>
</div>