<div class = "container">
  <div class = "text-center">
    <h2 class = "card w-50 mx-auto mt-4 shadow-lg">会員様ログイン</h2>
    <div class = "card w-50 mx-auto mt-4 shadow-lg">
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
        <div class="field form-group has-success">
          <i class="fas fa-envelope"></i>
          <%= f.label :"メールアドレス", class: "col-xs-10" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
  
        <div class="field form-group has-success">
          <i class="fas fa-unlock-alt"></i>
          <%= f.label :"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
  
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
  
        <div class = "col-xs-10 pull-right">
          <%= link_to "=>パスワードをお忘れの方", new_password_path(resource_name), class: "btn-link" %>
        </div>
  
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary col-xs-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>