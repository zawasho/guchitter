<!--いいね機能(ポジティブ)-->
    <% if gt.favorited_by?(current_user) %>
    <table>
      <tr>
        <td><%= link_to gt.favorites.count, favorite_path(gt), method: :delete, remote: true, :class => "fas fa-thumbs-up" %></td>
        <td>いいね！</td>
      </tr>
    </table>

    <% else %>
    <table>
      <tr>
        <td><%= link_to gt.favorites.count, favorites_path(good_thing_id: gt.id), method: :post, remote: true, :class => "far fa-thumbs-up" %></td>
        <td>いいね！</td>
      </tr>
    </table>

    <% end %>